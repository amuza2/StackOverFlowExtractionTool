<Window
    Height="900"
    Icon="/Assets/avalonia-logo.ico"
    Title="StackOverFlowExtractionTool"
    Width="700"
    d:DesignHeight="900"
    d:DesignWidth="700"
    mc:Ignorable="d"
    x:Class="StackOverFlowExtractionTool.Views.MainWindow"
    x:DataType="vm:MainWindowViewModel"
    xmlns="https://github.com/avaloniaui"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="clr-namespace:StackOverFlowExtractionTool.Models"
    xmlns:vm="using:StackOverFlowExtractionTool.ViewModels"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- <Design.DataContext> -->
    <!--     <vm:MainWindowViewModel /> -->
    <!-- </Design.DataContext> -->

    <Window.Styles>
        <Style Selector="Border.animatedBadge">
            <Setter Property="Background" Value="Red" />
            <Setter Property="CornerRadius" Value="9" />
            <Setter Property="Height" Value="18" />
            <Setter Property="Width" Value="18" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="HorizontalAlignment" Value="Center" />
            <Setter Property="Transitions">
                <Transitions>
                    <DoubleTransition Duration="0:0:0.3" Property="Opacity" />
                </Transitions>
            </Setter>
        </Style>

        <Style Selector="Border.animatedBadge[IsVisible=true]">
            <Setter Property="Opacity" Value="1" />
        </Style>

        <Style Selector="Border.animatedBadge[IsVisible=false]">
            <Setter Property="Opacity" Value="0" />
        </Style>
    </Window.Styles>



    <TabControl Margin="10" SelectedIndex="{Binding SelectedTabIndex}">

        <TabItem Header="Search">
            <Grid RowDefinitions="Auto,Auto,Auto,*,Auto">
                <!--  Row 0: Header  -->
                <StackPanel
                    Grid.Row="0"
                    Margin="0,0,0,10"
                    Spacing="5">

                    <StackPanel Orientation="Horizontal" Spacing="10">
                        <TextBlock Text="Filter:" VerticalAlignment="Center" />
                        <ComboBox
                            ItemsSource="{Binding SearchTab.FilterOptions.AvailableFilters}"
                            SelectedItem="{Binding SearchTab.FilterOptions.SelectedFilter}"
                            ToolTip.Tip="Select a filter"
                            Width="160">
                            <ComboBox.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel>
                                        <TextBlock FontWeight="Bold" Text="{Binding DisplayName}" />
                                        <TextBlock
                                            FontSize="11"
                                            Foreground="Gray"
                                            Text="{Binding Description}" />
                                    </StackPanel>
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>

                    </StackPanel>

                    <!--  Cache buttons  -->
                    <StackPanel
                        Margin="0,10,0,0"
                        Orientation="Horizontal"
                        Spacing="10">

                        <Button
                            Command="{Binding SearchTab.ClearCacheCommand}"
                            Content="Clear Cache"
                            Padding="8,2"
                            ToolTip.Tip="Clear all cached results" />
                        <Button
                            Command="{Binding SearchTab.ClearCacheForCurrentTagCommand}"
                            Content="Clear Tag Cache"
                            IsEnabled="{Binding SearchTab.Tag, Converter={x:Static StringConverters.IsNotNullOrEmpty}}"
                            Padding="8,2"
                            ToolTip.Tip="Clear cache for current tag" />
                    </StackPanel>

                    <!--  Search Controls  -->
                    <Grid ColumnDefinitions="Auto,200,Auto,Auto,Auto,Auto,*" RowDefinitions="Auto,Auto">
                        <!--  First Row: Search controls  -->
                        <TextBlock
                            Grid.Column="0"
                            Margin="0,0,10,0"
                            Text="Tag:"
                            VerticalAlignment="Center" />

                        <TextBox
                            Grid.Column="1"
                            Grid.Row="0"
                            Margin="0,0,10,0"
                            Text="{Binding SearchTab.Tag}"
                            Watermark="Enter tag (e.g., avalonia)">
                            <TextBox.KeyBindings>
                                <KeyBinding Command="{Binding SearchTab.SearchQuestionsCommand}" Gesture="Enter" />
                            </TextBox.KeyBindings>
                        </TextBox>

                        <Button
                            Command="{Binding SearchTab.SearchQuestionsCommand}"
                            Content="Search"
                            Grid.Column="2"
                            Grid.Row="0"
                            IsEnabled="{Binding SearchTab.IsLoading, Converter={x:Static BoolConverters.Not}}"
                            Margin="0,0,10,0" />

                        <Button
                            Command="{Binding SearchTab.RefreshQuestionsCommand}"
                            Content="Refresh"
                            Grid.Column="3"
                            Grid.Row="0"
                            IsEnabled="{Binding SearchTab.IsLoading, Converter={x:Static BoolConverters.Not}}"
                            Margin="0,0,10,0"
                            ToolTip.Tip="Refresh current page" />

                        <Button
                            Command="{Binding SearchTab.ClearResultsCommand}"
                            Content="Clear"
                            Grid.Column="4"
                            Grid.Row="0"
                            IsEnabled="{Binding SearchTab.IsLoading, Converter={x:Static BoolConverters.Not}}"
                            Margin="0,0,10,0" />

                        <!--  Page size selector  -->
                        <StackPanel
                            Grid.Column="5"
                            Grid.Row="0"
                            Margin="0,0,10,0"
                            Orientation="Horizontal"
                            Spacing="5">
                            <TextBlock Text="Show:" VerticalAlignment="Center" />
                            <ComboBox
                                DisplayMemberBinding="{Binding Display}"
                                ItemsSource="{Binding SearchTab.PageSizes}"
                                SelectedItem="{Binding SearchTab.SelectedPageSize}"
                                Width="80" />
                        </StackPanel>
                    </Grid>

                    <!--  Status  -->
                    <Border
                        Background="DarkGray"
                        CornerRadius="4"
                        Margin="0,10,0,0"
                        Padding="10,8">
                        <TextBlock
                            FontStyle="Italic"
                            Foreground="#6C757D"
                            Text="{Binding SearchTab.StatusMessage}"
                            TextWrapping="Wrap" />
                    </Border>
                </StackPanel>

                <!--  Row 1: Progress Bar  -->
                <ProgressBar
                    Grid.Row="1"
                    Height="4"
                    IsIndeterminate="{Binding SearchTab.IsLoading}"
                    IsVisible="{Binding SearchTab.IsLoading}"
                    Margin="0,0,0,10" />

                <!--  Row 2: Spacer (only visible when progress bar is hidden)  -->
                <Border
                    Grid.Row="2"
                    Height="0"
                    IsVisible="{Binding SearchTab.IsLoading, Converter={x:Static BoolConverters.Not}}"
                    Margin="0,0,0,10" />

                <!--  Row 3: Main Content (Questions List)  -->
                <Grid Grid.Row="3">
                    <ListBox
                        Background="Transparent"
                        IsVisible="{Binding SearchTab.IsLoading, Converter={x:Static BoolConverters.Not}}"
                        ItemsSource="{Binding SearchTab.Questions}"
                        ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                        SelectedItem="{Binding SearchTab.SelectedQuestion}">
                        <ListBox.ItemTemplate>
                            <DataTemplate DataType="models:StackOverflowQuestion">
                                <Border
                                    Background="Transparent"
                                    BorderBrush="#E0E0E0"
                                    BorderThickness="0,0,0,1"
                                    Margin="0,2"
                                    Name="QuestionBorder"
                                    Padding="15">

                                    <Grid>
                                        <StackPanel Spacing="8">
                                            <!--  Title with answer status color  -->
                                            <TextBlock
                                                FontSize="14"
                                                FontWeight="Bold"
                                                Foreground="{Binding IsAnswered, Converter={StaticResource BooleanToColorConverter}}"
                                                Text="{Binding Title}"
                                                TextWrapping="Wrap" />

                                            <!--  Stats row  -->
                                            <StackPanel Orientation="Horizontal" Spacing="20">
                                                <StackPanel Orientation="Horizontal" Spacing="5">
                                                    <TextBlock FontWeight="SemiBold" Text="Score:" />
                                                    <TextBlock
                                                        FontWeight="Bold"
                                                        Foreground="{Binding Score, Converter={StaticResource ScoreToColorConverter}}"
                                                        Text="{Binding Score}" />
                                                </StackPanel>

                                                <StackPanel Orientation="Horizontal" Spacing="5">
                                                    <TextBlock FontWeight="SemiBold" Text="Answers:" />
                                                    <TextBlock
                                                        FontWeight="Bold"
                                                        Foreground="{Binding AnswerCount, Converter={StaticResource AnswerCountToColorConverter}}"
                                                        Text="{Binding AnswerCount}" />
                                                </StackPanel>

                                                <StackPanel Orientation="Horizontal" Spacing="5">
                                                    <TextBlock FontWeight="SemiBold" Text="Views:" />
                                                    <TextBlock Text="{Binding FormattedViewCount}" />
                                                </StackPanel>

                                                <!--  Owner information  -->
                                                <StackPanel Orientation="Horizontal" Spacing="5">
                                                    <TextBlock FontWeight="SemiBold" Text="By:" />
                                                    <TextBlock Foreground="DarkBlue" Text="{Binding OwnerDisplayName}" />
                                                </StackPanel>
                                            </StackPanel>

                                            <!--  Tags  -->
                                            <StackPanel Orientation="Horizontal" Spacing="5">
                                                <TextBlock
                                                    FontWeight="SemiBold"
                                                    Text="Tags:"
                                                    VerticalAlignment="Center" />
                                                <ItemsControl ItemsSource="{Binding Tags}">
                                                    <ItemsControl.ItemTemplate>
                                                        <DataTemplate>
                                                            <Border
                                                                Background="#E3F2FD"
                                                                BorderBrush="#1976D2"
                                                                BorderThickness="1"
                                                                CornerRadius="4"
                                                                Margin="0,0,4,0"
                                                                Padding="6,3">
                                                                <TextBlock
                                                                    FontSize="11"
                                                                    Foreground="#1976D2"
                                                                    Text="{Binding}" />
                                                            </Border>
                                                        </DataTemplate>
                                                    </ItemsControl.ItemTemplate>
                                                    <ItemsControl.ItemsPanel>
                                                        <ItemsPanelTemplate>
                                                            <WrapPanel />
                                                        </ItemsPanelTemplate>
                                                    </ItemsControl.ItemsPanel>
                                                </ItemsControl>
                                            </StackPanel>

                                            <!--  Dates  -->
                                            <StackPanel Orientation="Horizontal" Spacing="15">
                                                <TextBlock
                                                    FontSize="11"
                                                    Foreground="#666666"
                                                    Text="{Binding CreationDateTime, StringFormat='Created: {0:MMM dd, yyyy HH:mm}'}" />
                                                <TextBlock
                                                    FontSize="11"
                                                    Foreground="#666666"
                                                    Text="{Binding LastActivityDateTime, StringFormat='Last activity: {0:MMM dd, yyyy HH:mm}'}" />
                                            </StackPanel>
                                        </StackPanel>

                                        <!--  Action Buttons  -->
                                        <StackPanel
                                            HorizontalAlignment="Right"
                                            Orientation="Horizontal"
                                            Spacing="10">
                                            <Button
                                                Background="Transparent"
                                                BorderBrush="#1976D2"
                                                BorderThickness="1"
                                                Command="{Binding $parent[ListBox].((vm:MainWindowViewModel)DataContext).SearchTab.OpenQuestionInBrowserCommand}"
                                                CommandParameter="{Binding}"
                                                Content="🌐 Open"
                                                FontSize="11"
                                                Foreground="#1976D2"
                                                Padding="8,2" />

                                            <Button
                                                Command="{Binding $parent[ListBox].((vm:MainWindowViewModel)DataContext).SearchTab.CopyLinkCommand}"
                                                CommandParameter="{Binding Link}"
                                                Content="📋 Copy Link"
                                                FontSize="11"
                                                Padding="8,2"
                                                ToolTip.Tip="Copy question link to clipboard" />
                                        </StackPanel>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Grid>
            </Grid>
        </TabItem>

        <!--  Tab 2: Recent Questions  -->
        <TabItem>
            <TabItem.Header>
                <StackPanel Orientation="Horizontal" Spacing="5">
                    <TextBlock Text="Recent Questions" VerticalAlignment="Center" />
                    <Border Classes="animatedBadge" IsVisible="{Binding RecentQuestionsTab.NotificationViewModel.UnreadCount, Converter={StaticResource GreaterThanConverter}, ConverterParameter='0'}">
                        <TextBlock
                            FontSize="10"
                            FontWeight="Bold"
                            Foreground="White"
                            HorizontalAlignment="Center"
                            Text="{Binding RecentQuestionsTab.NotificationViewModel.UnreadCount}"
                            VerticalAlignment="Center" />
                    </Border>
                </StackPanel>
            </TabItem.Header>

            <DockPanel Margin="5">
                <StackPanel
                    DockPanel.Dock="Top"
                    Margin="0,0,0,10"
                    Spacing="5">
                    <!--  Dropdown Button  -->
                    <Button
                        Background="#E3F2FD"
                        Command="{Binding RecentQuestionsTab.ToggleSubscriptionDropdownCommand}"
                        Content="➕ Add Subscription"
                        CornerRadius="4"
                        FontWeight="SemiBold"
                        Foreground="#1976D2"
                        Padding="8,4">
                        <Button.Styles>
                            <Style Selector="Button:pointerover /template/ ContentPresenter">
                                <Setter Property="Background" Value="#1976D2" />
                                <Setter Property="Foreground" Value="White" />
                            </Style>
                        </Button.Styles>
                    </Button>

                    <!--  Dropdown Content  -->
                    <Border
                        Background="DimGray"
                        BorderBrush="#E0E0E0"
                        BorderThickness="1"
                        CornerRadius="4"
                        IsVisible="{Binding RecentQuestionsTab.IsSubscriptionDropdownOpen}"
                        Padding="10">
                        <StackPanel Spacing="8">
                            <TextBlock
                                FontWeight="SemiBold"
                                Margin="0,0,0,5"
                                Text="Subscribe to a tag:" />

                            <!--  Tag Input  -->
                            <StackPanel Orientation="Horizontal" Spacing="5">
                                <TextBox
                                    Padding="8,4"
                                    Text="{Binding RecentQuestionsTab.NewSubscriptionTag}"
                                    Watermark="Enter tag (e.g avalonia)"
                                    Width="200">
                                    <TextBox.KeyBindings>
                                        <KeyBinding Command="{Binding RecentQuestionsTab.AddSubscriptionCommand}" Gesture="Enter" />
                                    </TextBox.KeyBindings>
                                </TextBox>
                                <Button
                                    Background="#28A745"
                                    Command="{Binding RecentQuestionsTab.AddSubscriptionCommand}"
                                    Content="Subscribe"
                                    Foreground="White"
                                    Padding="8,4" />
                                <Button
                                    Background="#6C757D"
                                    Command="{Binding RecentQuestionsTab.CancelSubscriptionCommand}"
                                    Content="Cancel"
                                    Foreground="White"
                                    Padding="8,4" />
                            </StackPanel>

                            <!--  Suggestions  -->
                            <StackPanel
                                IsVisible="{Binding RecentQuestionsTab.SubscriptionSuggestions.Count, Converter={StaticResource GreaterThanConverter}, ConverterParameter='0'}"
                                Orientation="Horizontal"
                                Spacing="5">
                                <TextBlock
                                    FontSize="11"
                                    Foreground="Gray"
                                    Text="Suggestions:"
                                    VerticalAlignment="Center" />
                                <ItemsControl ItemsSource="{Binding RecentQuestionsTab.SubscriptionSuggestions}">
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <WrapPanel ItemSpacing="5" />
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Button
                                                Background="Transparent"
                                                BorderBrush="#87CEFA"
                                                BorderThickness="1"
                                                Command="{Binding $parent[ItemsControl].((vm:MainWindowViewModel)DataContext).RecentQuestionsTab.UseSuggestionCommand}"
                                                CommandParameter="{Binding}"
                                                Content="{Binding}"
                                                FontSize="11"
                                                Foreground="#1E90FF"
                                                Padding="6,2" />
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </StackPanel>
                        </StackPanel>
                    </Border>

                    <!--  Current Subscriptions  -->
                    <StackPanel Orientation="Horizontal" Spacing="5">
                        <TextBlock
                            FontWeight="SemiBold"
                            Text="Current Subscriptions:"
                            VerticalAlignment="Center" />
                        <ItemsControl ItemsSource="{Binding RecentQuestionsTab.Subscriptions}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <WrapPanel ItemSpacing="5" />
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border
                                        Background="#E3F2FD"
                                        CornerRadius="12"
                                        Padding="8,4">
                                        <StackPanel Orientation="Horizontal" Spacing="5">
                                            <TextBlock
                                                FontWeight="SemiBold"
                                                Foreground="#1976D2"
                                                Text="{Binding Tag}"
                                                VerticalAlignment="Center" />
                                            <Button
                                                Background="Transparent"
                                                BorderThickness="0"
                                                Command="{Binding $parent[ItemsControl].((vm:MainWindowViewModel)DataContext).RecentQuestionsTab.UnsubscribeToTagCommand}"
                                                CommandParameter="{Binding Tag}"
                                                Content="×"
                                                FontSize="12"
                                                FontWeight="Bold"
                                                Foreground="Red"
                                                Padding="4,0"
                                                ToolTip.Tip="Unsubscribe from this tag" />
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>

                    </StackPanel>

                    <!--  Active Subscriptions with Remove Buttons  -->
                    <StackPanel
                        Margin="0,0,0,10"
                        Orientation="Horizontal"
                        Spacing="5">
                        <TextBlock
                            FontWeight="SemiBold"
                            Text="Filter by tag:"
                            VerticalAlignment="Center" />
                        <ItemsControl ItemsSource="{Binding RecentQuestionsTab.FilterTags}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <WrapPanel ItemSpacing="5" />
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Button
                                        Background="{Binding IsSelected, Converter={StaticResource BooleanToTagBackgroundConverter}}"
                                        Command="{Binding $parent[ItemsControl].((vm:MainWindowViewModel)DataContext).RecentQuestionsTab.FilterByTagCommand}"
                                        CommandParameter="{Binding Tag}"
                                        Content="{Binding Tag}"
                                        CornerRadius="12"
                                        FontWeight="SemiBold"
                                        Foreground="{Binding IsSelected, Converter={StaticResource BooleanToTagForegroundConverter}}"
                                        Padding="8,4"
                                        ToolTip.Tip="Click to filter by this tag">
                                        <Button.Styles>
                                            <Style Selector="Button:pointerover /template/ ContentPresenter">
                                                <Setter Property="Background" Value="#1976D2" />
                                                <Setter Property="Foreground" Value="White" />
                                            </Style>
                                        </Button.Styles>
                                    </Button>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>

                    <!--  Action Buttons  -->
                    <StackPanel Orientation="Horizontal" Spacing="5">

                        <Button
                            Command="{Binding RecentQuestionsTab.MarkAllNotificationsAsReadCommand}"
                            Content="Mark as read"
                            Padding="8,2"
                            ToolTip.Tip="Mark questions as read" />
                        <!-- <Button Command="{Binding $parent[Control].((vm:RecentQuestionsViewModel)DataContext).TestNotificationCommand}" Content="test notification popup" /> -->
                        <Button
                            Command="{Binding RecentQuestionsTab.ClearRecentQuestionsCommand}"
                            Content="Clear Questions"
                            Padding="8,2"
                            ToolTip.Tip="Clear all recent questions" />
                    </StackPanel>
                </StackPanel>

                <!--  Questions List  -->
                <ListBox ItemsSource="{Binding RecentQuestionsTab.FilteredRecentQuestions}" ScrollViewer.HorizontalScrollBarVisibility="Disabled">

                    <ListBox.ItemTemplate>
                        <DataTemplate DataType="models:StackOverflowQuestion">
                            <Border
                                Background="Transparent"
                                BorderBrush="#E0E0E0"
                                BorderThickness="0,0,0,1"
                                Margin="0,2"
                                Padding="15">
                                <StackPanel Spacing="8">
                                    <!--  Question Title  -->
                                    <TextBlock
                                        Cursor="Hand"
                                        FontSize="14"
                                        FontWeight="Bold"
                                        Foreground="#1976D2"
                                        Text="{Binding Title}"
                                        TextWrapping="Wrap">
                                        <TextBlock.ContextMenu>
                                            <ContextMenu>
                                                <MenuItem
                                                    Command="{Binding $parent[ListBox].((vm:RecentQuestionsViewModel)DataContext).OpenQuestionInBrowserCommand}"
                                                    CommandParameter="{Binding}"
                                                    Header="Open in Browser" />
                                                <MenuItem
                                                    Command="{Binding $parent[ListBox].((vm:RecentQuestionsViewModel)DataContext).CopyLinkCommand}"
                                                    CommandParameter="{Binding Link}"
                                                    Header="Copy Link" />
                                            </ContextMenu>
                                        </TextBlock.ContextMenu>
                                    </TextBlock>

                                    <!--  Question Stats  -->
                                    <StackPanel Orientation="Horizontal" Spacing="15">
                                        <StackPanel Orientation="Horizontal" Spacing="5">
                                            <TextBlock FontWeight="SemiBold" Text="Score:" />
                                            <TextBlock
                                                FontWeight="Bold"
                                                Foreground="{Binding Score, Converter={StaticResource ScoreToColorConverter}}"
                                                Text="{Binding Score}" />
                                        </StackPanel>

                                        <StackPanel Orientation="Horizontal" Spacing="5">
                                            <TextBlock FontWeight="SemiBold" Text="Answers:" />
                                            <TextBlock
                                                FontWeight="Bold"
                                                Foreground="{Binding AnswerCount, Converter={StaticResource AnswerCountToColorConverter}}"
                                                Text="{Binding AnswerCount}" />
                                        </StackPanel>

                                        <StackPanel Orientation="Horizontal" Spacing="5">
                                            <TextBlock FontWeight="SemiBold" Text="Views:" />
                                            <TextBlock Text="{Binding ViewCount}" />
                                        </StackPanel>

                                        <StackPanel Orientation="Horizontal" Spacing="5">
                                            <TextBlock FontWeight="SemiBold" Text="Status:" />
                                            <TextBlock Foreground="{Binding IsAnswered, Converter={StaticResource BooleanToColorConverter}}" Text="{Binding IsAnswered, Converter={StaticResource BooleanToAnsweredTextConverter}}" />
                                        </StackPanel>
                                    </StackPanel>

                                    <!--  Tags and Time  -->
                                    <StackPanel Orientation="Horizontal" Spacing="10">
                                        <ItemsControl ItemsSource="{Binding Tags}">
                                            <ItemsControl.ItemsPanel>
                                                <ItemsPanelTemplate>
                                                    <WrapPanel ItemSpacing="5" />
                                                </ItemsPanelTemplate>
                                            </ItemsControl.ItemsPanel>
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <Border
                                                        Background="#F0F8FF"
                                                        BorderBrush="#87CEFA"
                                                        BorderThickness="1"
                                                        CornerRadius="10"
                                                        Padding="6,3">
                                                        <TextBlock
                                                            FontSize="11"
                                                            FontWeight="SemiBold"
                                                            Foreground="#1E90FF"
                                                            Text="{Binding}" />
                                                    </Border>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>

                                        <TextBlock
                                            FontSize="11"
                                            FontStyle="Italic"
                                            Foreground="Gray"
                                            Text="{Binding CreationDateTime, StringFormat='{}{0:MMM dd, yyyy HH:mm}'}" />
                                    </StackPanel>

                                    <!--  Action Buttons  -->
                                    <StackPanel
                                        HorizontalAlignment="Right"
                                        Orientation="Horizontal"
                                        Spacing="10">
                                        <Button
                                            Background="Transparent"
                                            BorderBrush="#1976D2"
                                            BorderThickness="1"
                                            Command="{Binding $parent[ListBox].((vm:MainWindowViewModel)DataContext).RecentQuestionsTab.OpenQuestionInBrowserCommand}"
                                            CommandParameter="{Binding}"
                                            Content="🌐 Open"
                                            FontSize="11"
                                            Foreground="#1976D2"
                                            Padding="8,2" />

                                        <Button
                                            Command="{Binding $parent[ListBox].((vm:MainWindowViewModel)DataContext).RecentQuestionsTab.CopyLinkCommand}"
                                            CommandParameter="{Binding Link}"
                                            Content="📋 Copy Link"
                                            FontSize="11"
                                            Padding="8,2"
                                            ToolTip.Tip="Copy question link to clipboard" />
                                    </StackPanel>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ListBox.ItemTemplate>

                    <!--  Empty State  -->
                    <ListBox.Styles>
                        <Style Selector="ListBox:empty">
                            <Setter Property="Template">
                                <ControlTemplate>
                                    <StackPanel
                                        HorizontalAlignment="Center"
                                        Margin="40"
                                        Spacing="15"
                                        VerticalAlignment="Center">
                                        <PathIcon
                                            Data="M12,2A10,10 0 0,0 2,12A10,10 0 0,0 12,22A10,10 0 0,0 22,12A10,10 0 0,0 12,2M12,4A8,8 0 0,1 20,12A8,8 0 0,1 12,20A8,8 0 0,1 4,12A8,8 0 0,1 12,4M12,6A6,6 0 0,0 6,12A6,6 0 0,0 12,18A6,6 0 0,0 18,12A6,6 0 0,0 12,6Z"
                                            Foreground="LightGray"
                                            Height="48"
                                            Width="48" />
                                        <TextBlock
                                            FontSize="16"
                                            Foreground="Gray"
                                            HorizontalAlignment="Center"
                                            Text="No recent questions yet"
                                            TextAlignment="Center" />
                                        <TextBlock
                                            Foreground="Gray"
                                            HorizontalAlignment="Center"
                                            MaxWidth="300"
                                            Text="Questions will appear here when you receive notifications"
                                            TextAlignment="Center"
                                            TextWrapping="Wrap" />
                                    </StackPanel>
                                </ControlTemplate>
                            </Setter>
                        </Style>
                    </ListBox.Styles>
                </ListBox>
            </DockPanel>
        </TabItem>

        <!--  Tab 3: Settings  -->
        <TabItem Header="Settings">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="20" Spacing="20">

                    <!--  Notification Settings Section  -->
                    <Border
                        Background="DarkGray"
                        CornerRadius="8"
                        Padding="15">
                        <StackPanel Spacing="12">
                            <TextBlock
                                FontSize="16"
                                FontWeight="Bold"
                                Text="Notification Settings" />

                            <!--  Pop-up Notifications  -->
                            <StackPanel Orientation="Horizontal" Spacing="10">
                                <ToggleButton
                                    Height="25"
                                    IsChecked="{Binding SettingsTab.EnablePopupNotification}"
                                    Width="50">
                                    <ToggleButton.Styles>
                                        <Style Selector="ToggleButton:checked">
                                            <Setter Property="Background" Value="#4CAF50" />
                                        </Style>
                                        <Style Selector="ToggleButton:not(:checked)">
                                            <Setter Property="Background" Value="#CCCCCC" />
                                        </Style>
                                    </ToggleButton.Styles>
                                </ToggleButton>
                                <StackPanel>
                                    <TextBlock FontWeight="SemiBold" Text="Pop-up Notifications" />
                                    <TextBlock
                                        FontSize="11"
                                        Foreground="Gray"
                                        Text="Show desktop notifications for new questions" />
                                </StackPanel>
                                <TextBlock
                                    Margin="10,0,0,0"
                                    Text="{Binding SettingsTab.NotificationPopupState}"
                                    VerticalAlignment="Center" />
                            </StackPanel>

                            <!--  Notification Sound  -->
                            <StackPanel Orientation="Horizontal" Spacing="10">
                                <ToggleButton
                                    Height="25"
                                    IsChecked="{Binding SettingsTab.EnableNotificationSound}"
                                    Width="50">
                                    <ToggleButton.Styles>
                                        <Style Selector="ToggleButton:checked">
                                            <Setter Property="Background" Value="#4CAF50" />
                                        </Style>
                                        <Style Selector="ToggleButton:not(:checked)">
                                            <Setter Property="Background" Value="#CCCCCC" />
                                        </Style>
                                    </ToggleButton.Styles>
                                </ToggleButton>
                                <StackPanel>
                                    <TextBlock FontWeight="SemiBold" Text="Notification Sound" />
                                    <TextBlock
                                        FontSize="11"
                                        Foreground="Gray"
                                        Text="Play sound with notifications" />
                                </StackPanel>
                                <TextBlock
                                    Margin="10,0,0,0"
                                    Text="{Binding SettingsTab.SoundIcon}"
                                    VerticalAlignment="Center" />
                                <Button
                                    Command="{Binding SettingsTab.TestSoundCommand}"
                                    Content="Test Sound"
                                    IsEnabled="{Binding SettingsTab.EnableNotificationSound}"
                                    Margin="10,0,0,0"
                                    Padding="8,4" />
                            </StackPanel>

                            <!--  Notification Duration  -->
                            <StackPanel Spacing="5">
                                <StackPanel Orientation="Horizontal" Spacing="10">
                                    <TextBlock FontWeight="SemiBold" Text="Notification Duration" />
                                    <TextBlock Text="{Binding SettingsTab.NotificationDuration, StringFormat='{}{0} seconds'}" />
                                </StackPanel>
                                <TextBlock
                                    FontSize="11"
                                    Foreground="Gray"
                                    Text="How long notifications stay visible" />
                                <Slider
                                    Margin="0,5,0,0"
                                    Maximum="30"
                                    Minimum="2"
                                    TickFrequency="1"
                                    TickPlacement="BottomRight"
                                    Value="{Binding SettingsTab.NotificationDuration}" />
                            </StackPanel>

                            <!--  Test Notification Button  -->
                            <Button
                                Background="#2196F3"
                                Command="{Binding SettingsTab.TestNotificationCommand}"
                                Content="Test Notification"
                                Foreground="White"
                                HorizontalAlignment="Left"
                                Margin="0,10,0,0"
                                Padding="10,6" />
                        </StackPanel>
                    </Border>

                    <!--  Monitoring Settings Section  -->
                    <Border
                        Background="DarkGray"
                        CornerRadius="8"
                        Padding="15">
                        <StackPanel Spacing="12">
                            <TextBlock
                                FontSize="16"
                                FontWeight="Bold"
                                Text="Monitoring Settings" />

                            <!--  Monitoring Status  -->
                            <StackPanel Orientation="Horizontal" Spacing="10">
                                <TextBlock
                                    FontSize="16"
                                    Text="{Binding SettingsTab.MonitoringIcon}"
                                    VerticalAlignment="Center" />
                                <TextBlock
                                    FontWeight="SemiBold"
                                    Text="{Binding SettingsTab.MonitoringStatus}"
                                    VerticalAlignment="Center" />
                            </StackPanel>

                            <!--  Monitoring Toggle  -->
                            <StackPanel Orientation="Horizontal" Spacing="10">
                                <ToggleButton
                                    Command="{Binding SettingsTab.ToggleMonitoringCommand}"
                                    Height="25"
                                    Width="50">
                                    <ToggleButton.Styles>
                                        <Style Selector="ToggleButton:checked /template/ ContentPresenter">
                                            <Setter Property="Background" Value="#4CAF50" />
                                        </Style>
                                        <Style Selector="ToggleButton:not(:checked) /template/ ContentPresenter">
                                            <Setter Property="Background" Value="#CCCCCC" />
                                        </Style>
                                    </ToggleButton.Styles>
                                </ToggleButton>

                                <StackPanel>
                                    <TextBlock FontWeight="SemiBold" Text="Real-time Monitoring" />
                                    <TextBlock
                                        FontSize="11"
                                        Foreground="Gray"
                                        Text="Continuously monitor for new questions" />
                                </StackPanel>
                                <!--  <Button  -->
                                <!--  Background="{Binding SettingsTab.IsMonitoring, Converter={StaticResource BooleanToActiveColorConverter}}"  -->
                                <!--  Command="{Binding SettingsTab.ToggleMonitoringCommand}"  -->
                                <!--  Content="{Binding SettingsTab.IsMonitoring, Converter={x:Static BoolConverters.Not}, ConverterParameter='Start Monitoring:Stop Monitoring'}"  -->
                                <!--  Foreground="White"  -->
                                <!--  Margin="10,0,0,0"  -->
                                <!--  Padding="10,6" />  -->
                            </StackPanel>

                            <!--  Auto-start Monitoring  -->
                            <StackPanel Orientation="Horizontal" Spacing="10">
                                <CheckBox IsChecked="{Binding SettingsTab.AutoStartMonitoring}" />
                                <StackPanel>
                                    <TextBlock FontWeight="SemiBold" Text="Auto-start Monitoring" />
                                    <TextBlock
                                        FontSize="11"
                                        Foreground="Gray"
                                        Text="Start monitoring automatically when application launches" />
                                </StackPanel>
                            </StackPanel>
                        </StackPanel>
                    </Border>

                    <!--  Monitoring Interval Setting  -->
                    <StackPanel Spacing="5">
                        <StackPanel Orientation="Horizontal" Spacing="10">
                            <TextBlock FontWeight="SemiBold" Text="Monitoring Interval" />
                            <TextBlock Text="{Binding SettingsTab.MonitoringInterval, StringFormat='{}{0} minutes'}" />
                        </StackPanel>
                        <TextBlock
                            FontSize="11"
                            Foreground="Gray"
                            Text="How often to check for new questions" />
                        <StackPanel Orientation="Horizontal" Spacing="10">
                            <Slider
                                Maximum="60"
                                Minimum="1"
                                TickFrequency="1"
                                TickPlacement="BottomRight"
                                Value="{Binding SettingsTab.MonitoringInterval}"
                                Width="200" />
                            <StackPanel>
                                <Button
                                    Command="{Binding SettingsTab.IncreaseMonitoringIntervalCommand}"
                                    Content="+"
                                    Height="25"
                                    Margin="2"
                                    Width="30" />
                                <Button
                                    Command="{Binding SettingsTab.DecreaseMonitoringIntervalCommand}"
                                    Content="-"
                                    Height="25"
                                    Margin="2"
                                    Width="30" />
                            </StackPanel>
                        </StackPanel>
                        <TextBlock
                            FontSize="10"
                            Foreground="Gray"
                            Text="Range: 1-60 minutes" />
                    </StackPanel>

                    <!--  Data Management Section  -->
                    <Border
                        Background="DarkGray"
                        CornerRadius="8"
                        Padding="15">
                        <StackPanel Spacing="12">
                            <TextBlock
                                FontSize="16"
                                FontWeight="Bold"
                                Text="Data Management" />

                            <!--  Maximum Recent Questions  -->
                            <StackPanel Spacing="5">
                                <StackPanel Orientation="Horizontal" Spacing="10">
                                    <TextBlock FontWeight="SemiBold" Text="Maximum Recent Questions" />
                                    <TextBlock Text="{Binding SettingsTab.MaxRecentQuestions}" />
                                </StackPanel>
                                <TextBlock
                                    FontSize="11"
                                    Foreground="Gray"
                                    Text="Maximum number of recent questions to keep in memory" />
                                <Slider
                                    Margin="0,5,0,0"
                                    Maximum="200"
                                    Minimum="10"
                                    TickFrequency="10"
                                    TickPlacement="BottomRight"
                                    Value="{Binding SettingsTab.MaxRecentQuestions}" />
                            </StackPanel>

                            <!--  Cache Expiration  -->
                            <StackPanel Spacing="5">
                                <StackPanel Orientation="Horizontal" Spacing="10">
                                    <TextBlock FontWeight="SemiBold" Text="Cache Expiration" />
                                    <TextBlock Text="{Binding SettingsTab.CacheExpirationHours, StringFormat='{}{0} hours'}" />
                                </StackPanel>
                                <TextBlock
                                    FontSize="11"
                                    Foreground="Gray"
                                    Text="How long to keep cached data before refreshing" />
                                <Slider
                                    Margin="0,5,0,0"
                                    Maximum="168"
                                    Minimum="1"
                                    TickFrequency="24"
                                    TickPlacement="BottomRight"
                                    Value="{Binding SettingsTab.CacheExpirationHours}" />
                            </StackPanel>

                            <!--  Cache Statistics  -->
                            <Border
                                Background="White"
                                CornerRadius="4"
                                Margin="0,10,0,0"
                                Padding="10">
                                <StackPanel>
                                    <TextBlock
                                        FontWeight="SemiBold"
                                        Margin="0,0,0,5"
                                        Text="Cache Statistics" />
                                    <Grid
                                        ColumnDefinitions="Auto,*,Auto,*"
                                        Margin="0,2"
                                        RowDefinitions="Auto,Auto">
                                        <TextBlock
                                            Grid.Column="0"
                                            Grid.Row="0"
                                            Text="Total Requests:" />
                                        <TextBlock
                                            FontWeight="SemiBold"
                                            Grid.Column="1"
                                            Grid.Row="0"
                                            Margin="10,0,0,0"
                                            Text="{Binding SettingsTab.TotalCacheRequests}" />

                                        <TextBlock
                                            Grid.Column="2"
                                            Grid.Row="0"
                                            Margin="20,0,0,0"
                                            Text="Cache Hits:" />
                                        <TextBlock
                                            FontWeight="SemiBold"
                                            Foreground="#4CAF50"
                                            Grid.Column="3"
                                            Grid.Row="0"
                                            Margin="10,0,0,0"
                                            Text="{Binding SettingsTab.CacheHits}" />

                                        <TextBlock
                                            Grid.Column="0"
                                            Grid.Row="1"
                                            Text="Cache Misses:" />
                                        <TextBlock
                                            FontWeight="SemiBold"
                                            Foreground="#F44336"
                                            Grid.Column="1"
                                            Grid.Row="1"
                                            Margin="10,0,0,0"
                                            Text="{Binding SettingsTab.CacheMisses}" />

                                        <TextBlock
                                            Grid.Column="2"
                                            Grid.Row="1"
                                            Margin="20,0,0,0"
                                            Text="Status:" />
                                        <TextBlock
                                            FontWeight="SemiBold"
                                            Grid.Column="3"
                                            Grid.Row="1"
                                            Margin="10,0,0,0"
                                            Text="{Binding SettingsTab.CacheStatus}" />
                                    </Grid>
                                </StackPanel>
                            </Border>

                            <!--  Cache Actions  -->
                            <StackPanel
                                Margin="0,10,0,0"
                                Orientation="Horizontal"
                                Spacing="10">
                                <Button
                                    Background="#FF9800"
                                    Command="{Binding SettingsTab.ClearCacheCommand}"
                                    Content="Clear Cache"
                                    Foreground="White"
                                    Padding="10,6" />
                            </StackPanel>
                        </StackPanel>
                    </Border>

                    <!--  Reset Section  -->
                    <Border
                        Background="#FFF3E0"
                        CornerRadius="8"
                        Padding="15">
                        <StackPanel Spacing="12">
                            <TextBlock
                                FontSize="16"
                                FontWeight="Bold"
                                Text="Application Settings" />

                            <StackPanel Orientation="Horizontal" Spacing="10">
                                <Button
                                    Background="#795548"
                                    Command="{Binding SettingsTab.ResetToDefaultsCommand}"
                                    Content="Reset to Defaults"
                                    Foreground="White"
                                    Padding="12,8" />
                                <TextBlock
                                    FontSize="11"
                                    Foreground="Gray"
                                    MaxWidth="300"
                                    Text="Reset all settings to their default values"
                                    TextWrapping="Wrap"
                                    VerticalAlignment="Center" />
                            </StackPanel>
                        </StackPanel>
                    </Border>

                </StackPanel>
            </ScrollViewer>
        </TabItem>
    </TabControl>

</Window>