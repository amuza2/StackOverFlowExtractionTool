<Window
    Height="900"
    Icon="/Assets/avalonia-logo.ico"
    Title="StackOverFlowExtractionTool"
    Width="600"
    d:DesignHeight="900"
    d:DesignWidth="600"
    mc:Ignorable="d"
    x:Class="StackOverFlowExtractionTool.Views.MainWindow"
    x:DataType="vm:MainWindowViewModel"
    xmlns="https://github.com/avaloniaui"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="clr-namespace:StackOverFlowExtractionTool.Models"
    xmlns:vm="using:StackOverFlowExtractionTool.ViewModels"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Design.DataContext>
        <vm:MainWindowViewModel />
    </Design.DataContext>

    <Window.KeyBindings>
        <KeyBinding Command="{Binding SearchQuestionsCommand}" Gesture="Enter" />
    </Window.KeyBindings>

    <DockPanel Margin="10">
        <!--  Header  -->
        <StackPanel
            DockPanel.Dock="Top"
            Margin="0,0,0,10"
            Spacing="5">
            <TextBlock
                FontSize="18"
                FontWeight="Bold"
                Margin="0,0,0,15"
                Text="StackOverflow Question Extractor" />

            <StackPanel
                Margin="0,10,0,0"
                Orientation="Horizontal"
                Spacing="10">

                <Button
                    Command="{Binding ClearCacheCommand}"
                    Content="Clear Cache"
                    Padding="8,2"
                    ToolTip.Tip="Clear all cached results" />
                <Button
                    Command="{Binding ClearCacheForCurrentTagCommand}"
                    Content="Clear Tag Cache"
                    IsEnabled="{Binding Tag, Converter={x:Static StringConverters.IsNotNullOrEmpty}}"
                    Padding="8,2"
                    ToolTip.Tip="Clear cache for current tag" />
            </StackPanel>

            <!--  Search Controls  -->
            <Grid ColumnDefinitions="Auto,200,Auto,Auto,Auto,Auto,*" RowDefinitions="Auto,Auto">
                <!--  First Row: Search controls  -->
                <TextBlock
                    Grid.Column="0"
                    Margin="0,0,10,0"
                    Text="Tag:"
                    VerticalAlignment="Center" />

                <TextBox
                    Grid.Column="1"
                    Grid.Row="0"
                    Margin="0,0,10,0"
                    Text="{Binding Tag}"
                    Watermark="Enter tag (e.g., avalonia)" />

                <Button
                    Command="{Binding SearchQuestionsCommand}"
                    Content="Search"
                    Grid.Column="2"
                    Grid.Row="0"
                    IsEnabled="{Binding !IsLoading}"
                    Margin="0,0,10,0" />

                <Button
                    Command="{Binding RefreshQuestionsCommand}"
                    Content="Refresh"
                    Grid.Column="3"
                    Grid.Row="0"
                    IsEnabled="{Binding !IsLoading}"
                    Margin="0,0,10,0"
                    ToolTip.Tip="Refresh current page" />

                <Button
                    Command="{Binding ClearResultsCommand}"
                    Content="Clear"
                    Grid.Column="4"
                    Grid.Row="0"
                    IsEnabled="{Binding !IsLoading}"
                    Margin="0,0,10,0" />

                <!--  Page size selector  -->
                <StackPanel
                    Grid.Column="5"
                    Grid.Row="0"
                    Margin="0,0,10,0"
                    Orientation="Horizontal"
                    Spacing="5">
                    <TextBlock Text="Show:" VerticalAlignment="Center" />
                    <ComboBox
                        DisplayMemberBinding="{Binding Display}"
                        ItemsSource="{Binding Pagesizes}"
                        MinWidth="100"
                        SelectedItem="{Binding SelectedPageSize}" />
                </StackPanel>
            </Grid>

            <!--  Status  -->
            <Border
                Background="#F8F9FA"
                CornerRadius="4"
                Margin="0,10,0,0"
                Padding="10,8">
                <TextBlock
                    FontStyle="Italic"
                    Foreground="#6C757D"
                    Text="{Binding StatusMessage}"
                    TextWrapping="Wrap" />
            </Border>
        </StackPanel>

        <!--  Progress Bar  -->
        <ProgressBar
            DockPanel.Dock="Top"
            Height="4"
            IsIndeterminate="{Binding IsLoading}"
            IsVisible="{Binding IsLoading}"
            Margin="0,0,0,10" />

        <Grid>
            <!--  Questions List  -->
            <ListBox
                Background="Transparent"
                IsVisible="{Binding !IsLoading}"
                ItemsSource="{Binding Questions}"
                ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                SelectedItem="{Binding SelectedQuestion}">
                <ListBox.ItemTemplate>
                    <DataTemplate DataType="models:StackOverflowQuestion">
                        <Border
                            Background="Transparent"
                            BorderBrush="#E0E0E0"
                            BorderThickness="0,0,0,1"
                            Margin="0,2"
                            Name="QuestionBorder"
                            Padding="15">

                            <Grid>
                                <StackPanel Spacing="8">
                                    <!--  Title with answer status color  -->
                                    <TextBlock
                                        FontSize="14"
                                        FontWeight="Bold"
                                        Foreground="{Binding IsAnswered, Converter={StaticResource BooleanToColorConverter}}"
                                        Text="{Binding Title}"
                                        TextWrapping="Wrap" />

                                    <!--  Stats row  -->
                                    <StackPanel Orientation="Horizontal" Spacing="20">
                                        <StackPanel Orientation="Horizontal" Spacing="5">
                                            <TextBlock FontWeight="SemiBold" Text="Score:" />
                                            <TextBlock
                                                FontWeight="Bold"
                                                Foreground="{Binding Score, Converter={StaticResource ScoreToColorConverter}}"
                                                Text="{Binding Score}" />
                                        </StackPanel>

                                        <StackPanel Orientation="Horizontal" Spacing="5">
                                            <TextBlock FontWeight="SemiBold" Text="Answers:" />
                                            <TextBlock
                                                FontWeight="Bold"
                                                Foreground="{Binding AnswerCount, Converter={StaticResource AnswerCountToColorConverter}}"
                                                Text="{Binding AnswerCount}" />
                                        </StackPanel>

                                        <StackPanel Orientation="Horizontal" Spacing="5">
                                            <TextBlock FontWeight="SemiBold" Text="Views:" />
                                            <TextBlock Text="{Binding FormattedViewCount}" />
                                        </StackPanel>

                                        <!--  Owner information  -->
                                        <StackPanel Orientation="Horizontal" Spacing="5">
                                            <TextBlock FontWeight="SemiBold" Text="By:" />
                                            <TextBlock Foreground="DarkBlue" Text="{Binding OwnerDisplayName}" />
                                        </StackPanel>
                                    </StackPanel>

                                    <!--  Tags  -->
                                    <StackPanel Orientation="Horizontal" Spacing="5">
                                        <TextBlock
                                            FontWeight="SemiBold"
                                            Text="Tags:"
                                            VerticalAlignment="Center" />
                                        <ItemsControl ItemsSource="{Binding Tags}">
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <Border
                                                        Background="#E3F2FD"
                                                        BorderBrush="#1976D2"
                                                        BorderThickness="1"
                                                        CornerRadius="4"
                                                        Margin="0,0,4,0"
                                                        Padding="6,3">
                                                        <TextBlock
                                                            FontSize="11"
                                                            Foreground="#1976D2"
                                                            Text="{Binding}" />
                                                    </Border>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                            <ItemsControl.ItemsPanel>
                                                <ItemsPanelTemplate>
                                                    <WrapPanel />
                                                </ItemsPanelTemplate>
                                            </ItemsControl.ItemsPanel>
                                        </ItemsControl>
                                    </StackPanel>

                                    <!--  Dates  -->
                                    <StackPanel Orientation="Horizontal" Spacing="15">
                                        <TextBlock
                                            FontSize="11"
                                            Foreground="#666666"
                                            Text="{Binding CreationDateTime, StringFormat='Created: {0:MMM dd, yyyy HH:mm}'}" />
                                        <TextBlock
                                            FontSize="11"
                                            Foreground="#666666"
                                            Text="{Binding LastActivityDateTime, StringFormat='Last activity: {0:MMM dd, yyyy HH:mm}'}" />
                                    </StackPanel>
                                </StackPanel>

                                <!--  Open in Browser Button (shown on hover)  -->
                                <Button
                                    Background="#1976D2"
                                    BorderThickness="0"
                                    Command="{Binding $parent[ListBox].((vm:MainWindowViewModel)DataContext).OpenQuestionInBrowserCommand}"
                                    CommandParameter="{Binding}"
                                    Content="🌐 Open"
                                    CornerRadius="4"
                                    FontSize="11"
                                    Foreground="White"
                                    HorizontalAlignment="Right"
                                    IsEnabled="{Binding $parent[ListBox].((vm:MainWindowViewModel)DataContext).IsLoading, Converter={x:Static BoolConverters.Not}}"
                                    IsVisible="{Binding #QuestionBorder.IsPointerOver}"
                                    Padding="8,4"
                                    VerticalAlignment="Center" />
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </Grid>

        <!--  Bottom Panel: Actions  -->
        <StackPanel
            DockPanel.Dock="Bottom"
            HorizontalAlignment="Right"
            Margin="0,10,0,0"
            Orientation="Horizontal"
            Spacing="10" />
    </DockPanel>

</Window>
