<Window
    Height="900"
    Icon="/Assets/stack-overflow.png"
    Title="StackOverFlowExtractionTool"
    Width="700"
    d:DesignHeight="900"
    d:DesignWidth="700"
    mc:Ignorable="d"
    x:Class="StackOverFlowExtractionTool.Views.MainWindow"
    x:DataType="vm:MainWindowViewModel"
    xmlns="https://github.com/avaloniaui"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="clr-namespace:StackOverFlowExtractionTool.Models"
    xmlns:vm="using:StackOverFlowExtractionTool.ViewModels"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- <Design.DataContext> -->
    <!--     <vm:MainWindowViewModel /> -->
    <!-- </Design.DataContext> -->

    <TabControl Margin="10" SelectedIndex="{Binding SelectedTabIndex}">

        <TabItem Header="Search">
            <Grid Background="{DynamicResource BackgroundBrush}" RowDefinitions="Auto,Auto,Auto,*,Auto">
                <!--  Row 0: Header  -->
                <StackPanel Grid.Row="0" Margin="0,0,0,16">
                    <!--  Filter Section  -->
                    <StackPanel
                        Margin="0,0,0,8"
                        Orientation="Horizontal"
                        Spacing="12">
                        <TextBlock
                            Classes="body"
                            Text="Filter:"
                            VerticalAlignment="Center" />
                        <ComboBox
                            Classes="combo-filter"
                            ItemsSource="{Binding SearchTab.FilterOptions.AvailableFilters}"
                            SelectedItem="{Binding SearchTab.FilterOptions.SelectedFilter}"
                            ToolTip.Tip="Select a filter"
                            Width="180">
                            <ComboBox.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Spacing="2">
                                        <TextBlock
                                            Classes="body"
                                            FontWeight="SemiBold"
                                            Text="{Binding DisplayName}" />
                                        <TextBlock
                                            FontSize="11"
                                            Foreground="{DynamicResource SecondaryTextBrush}"
                                            Text="{Binding Description}" />
                                    </StackPanel>
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>
                    </StackPanel>

                    <!--  Cache Buttons  -->
                    <StackPanel
                        Margin="0,8,0,0"
                        Orientation="Horizontal"
                        Spacing="12">
                        <Button
                            Classes="secondary"
                            Command="{Binding SearchTab.ClearCacheCommand}"
                            Content="Clear Cache"
                            Padding="12,6"
                            ToolTip.Tip="Clear all cached results" />
                        <Button
                            Classes="ghost"
                            Command="{Binding SearchTab.ClearCacheForCurrentTagCommand}"
                            Content="Clear Tag Cache"
                            IsEnabled="{Binding SearchTab.Tag, Converter={x:Static StringConverters.IsNotNullOrEmpty}}"
                            Padding="12,6"
                            ToolTip.Tip="Clear cache for current tag" />
                    </StackPanel>

                    <!--  Search Controls  -->
                    <Border
                        Classes="section-card"
                        Margin="0,12,0,0"
                        Padding="16">
                        <StackPanel Spacing="12">
                            <TextBlock Classes="header-small" Text="Search Questions" />

                            <Grid
                                ColumnDefinitions="Auto,*,Auto,Auto,Auto,Auto"
                                ColumnSpacing="10"
                                RowDefinitions="Auto"
                                RowSpacing="10">
                                <!--  Tag Input  -->
                                <TextBlock
                                    Classes="body"
                                    Grid.Column="0"
                                    Text="Tag:"
                                    VerticalAlignment="Center" />

                                <TextBox
                                    Classes="search-input"
                                    Grid.Column="1"
                                    Text="{Binding SearchTab.Tag}"
                                    Watermark="Enter tag (e.g., avalonia)">
                                    <TextBox.KeyBindings>
                                        <KeyBinding Command="{Binding SearchTab.SearchQuestionsCommand}" Gesture="Enter" />
                                    </TextBox.KeyBindings>
                                </TextBox>

                                <!--  Action Buttons  -->
                                <Button
                                    Classes="primary"
                                    Command="{Binding SearchTab.SearchQuestionsCommand}"
                                    Content="Search"
                                    Grid.Column="2"
                                    IsEnabled="{Binding SearchTab.IsLoading, Converter={x:Static BoolConverters.Not}}" />

                                <Button
                                    Classes="secondary"
                                    Command="{Binding SearchTab.RefreshQuestionsCommand}"
                                    Content="Refresh"
                                    Grid.Column="3"
                                    IsEnabled="{Binding SearchTab.IsLoading, Converter={x:Static BoolConverters.Not}}"
                                    ToolTip.Tip="Refresh current page" />

                                <Button
                                    Classes="ghost"
                                    Command="{Binding SearchTab.ClearResultsCommand}"
                                    Content="Clear"
                                    Grid.Column="4"
                                    IsEnabled="{Binding SearchTab.IsLoading, Converter={x:Static BoolConverters.Not}}" />

                                <!--  Page Size Selector  -->
                                <StackPanel
                                    Grid.Column="5"
                                    Orientation="Horizontal"
                                    Spacing="8">
                                    <TextBlock
                                        Classes="caption"
                                        Text="Show:"
                                        VerticalAlignment="Center" />
                                    <ComboBox
                                        Classes="combo-small"
                                        DisplayMemberBinding="{Binding Display}"
                                        ItemsSource="{Binding SearchTab.PageSizes}"
                                        SelectedItem="{Binding SearchTab.SelectedPageSize}"
                                        Width="80" />
                                </StackPanel>
                            </Grid>
                        </StackPanel>
                    </Border>

                    <!--  Status Bar  -->
                    <Border Classes="info-card" Margin="0,12,0,0">
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <TextBlock
                                FontSize="14"
                                Text="ðŸ“Š"
                                VerticalAlignment="Center" />
                            <TextBlock
                                Classes="caption"
                                FontStyle="Italic"
                                Foreground="{DynamicResource SecondaryTextBrush}"
                                Text="{Binding SearchTab.StatusMessage}"
                                TextWrapping="Wrap" />
                        </StackPanel>
                    </Border>
                </StackPanel>

                <!--  Row 2: Spacer (only visible when progress bar is hidden)  -->
                <Border
                    Grid.Row="2"
                    Height="0"
                    IsVisible="{Binding SearchTab.IsLoading, Converter={x:Static BoolConverters.Not}}"
                    Margin="0,0,0,16" />

                <!--  Row 3: Main Content (Questions List)  -->
                <Grid Grid.Row="3">
                    <ListBox
                        Background="Transparent"
                        IsVisible="{Binding SearchTab.IsLoading, Converter={x:Static BoolConverters.Not}}"
                        ItemsSource="{Binding SearchTab.Questions}"
                        ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                        SelectedItem="{Binding SearchTab.SelectedQuestion}">
                        <ListBox.ItemTemplate>
                            <DataTemplate DataType="models:StackOverflowQuestion">
                                <Border Classes="question-card">
                                    <StackPanel Spacing="12">
                                        <!--  Title with answer status  -->
                                        <TextBlock
                                            Classes="header-small"
                                            FontSize="15"
                                            FontWeight="SemiBold"
                                            Foreground="{Binding IsAnswered, Converter={StaticResource BooleanToColorConverter}}"
                                            Text="{Binding Title}"
                                            TextWrapping="Wrap" />

                                        <!--  Stats Row  -->
                                        <StackPanel
                                            Classes="stats-container"
                                            Orientation="Horizontal"
                                            Spacing="20">
                                            <StackPanel
                                                Classes="stat-item"
                                                Orientation="Horizontal"
                                                Spacing="6">
                                                <TextBlock Classes="caption" Text="Score:" />
                                                <TextBlock
                                                    Classes="body"
                                                    FontWeight="SemiBold"
                                                    Foreground="{Binding Score, Converter={StaticResource ScoreToColorConverter}}"
                                                    Text="{Binding Score}" />
                                            </StackPanel>

                                            <StackPanel
                                                Classes="stat-item"
                                                Orientation="Horizontal"
                                                Spacing="6">
                                                <TextBlock Classes="caption" Text="Answers:" />
                                                <TextBlock
                                                    Classes="body"
                                                    FontWeight="SemiBold"
                                                    Foreground="{Binding AnswerCount, Converter={StaticResource AnswerCountToColorConverter}}"
                                                    Text="{Binding AnswerCount}" />
                                            </StackPanel>

                                            <StackPanel
                                                Classes="stat-item"
                                                Orientation="Horizontal"
                                                Spacing="6">
                                                <TextBlock Classes="caption" Text="Views:" />
                                                <TextBlock Classes="body" Text="{Binding FormattedViewCount}" />
                                            </StackPanel>

                                            <!--  Owner Information  -->
                                            <StackPanel
                                                Classes="stat-item"
                                                Orientation="Horizontal"
                                                Spacing="6">
                                                <TextBlock Classes="caption" Text="By:" />
                                                <TextBlock
                                                    Classes="body"
                                                    Foreground="{DynamicResource AccentTextBrush}"
                                                    Text="{Binding OwnerDisplayName}" />
                                            </StackPanel>
                                        </StackPanel>

                                        <!--  Tags  -->
                                        <StackPanel Orientation="Horizontal" Spacing="8">
                                            <TextBlock
                                                Classes="caption"
                                                Text="Tags:"
                                                VerticalAlignment="Center" />
                                            <ItemsControl ItemsSource="{Binding Tags}">
                                                <ItemsControl.ItemTemplate>
                                                    <DataTemplate>
                                                        <Border Classes="tag">
                                                            <TextBlock
                                                                Classes="caption"
                                                                FontSize="11"
                                                                FontWeight="SemiBold"
                                                                Foreground="{DynamicResource TagTextBrush}"
                                                                Text="{Binding}" />
                                                        </Border>
                                                    </DataTemplate>
                                                </ItemsControl.ItemTemplate>
                                                <ItemsControl.ItemsPanel>
                                                    <ItemsPanelTemplate>
                                                        <WrapPanel ItemSpacing="4" />
                                                    </ItemsPanelTemplate>
                                                </ItemsControl.ItemsPanel>
                                            </ItemsControl>
                                        </StackPanel>

                                        <!--  Dates  -->
                                        <StackPanel Orientation="Horizontal" Spacing="16">
                                            <TextBlock
                                                Classes="caption"
                                                FontSize="11"
                                                Foreground="{DynamicResource SecondaryTextBrush}"
                                                Text="{Binding CreationDateTime, StringFormat='Created: {0:MMM dd, yyyy HH:mm}'}" />
                                            <TextBlock
                                                Classes="caption"
                                                FontSize="11"
                                                Foreground="{DynamicResource SecondaryTextBrush}"
                                                Text="{Binding LastActivityDateTime, StringFormat='Last activity: {0:MMM dd, yyyy HH:mm}'}" />
                                        </StackPanel>

                                        <!--  Action Buttons  -->
                                        <StackPanel
                                            HorizontalAlignment="Right"
                                            Orientation="Horizontal"
                                            Spacing="8">
                                            <Button
                                                Classes="secondary"
                                                Command="{Binding $parent[ListBox].((vm:MainWindowViewModel)DataContext).SearchTab.OpenQuestionInBrowserCommand}"
                                                CommandParameter="{Binding}"
                                                Content="ðŸŒ Open"
                                                Padding="10,6" />

                                            <Button
                                                Classes="ghost"
                                                Command="{Binding $parent[ListBox].((vm:MainWindowViewModel)DataContext).SearchTab.CopyLinkCommand}"
                                                CommandParameter="{Binding Link}"
                                                Content="ðŸ“‹ Copy"
                                                Padding="10,6"
                                                ToolTip.Tip="Copy question link to clipboard" />
                                        </StackPanel>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>

                        <!--  Empty State  -->
                        <ListBox.Styles>
                            <Style Selector="ListBox:empty">
                                <Setter Property="Template">
                                    <ControlTemplate>
                                        <Border Classes="section-card" Margin="40">
                                            <StackPanel
                                                HorizontalAlignment="Center"
                                                Spacing="16"
                                                VerticalAlignment="Center">
                                                <PathIcon
                                                    Data="M12,2A10,10 0 0,0 2,12A10,10 0 0,0 12,22A10,10 0 0,0 22,12A10,10 0 0,0 12,2M12,4A8,8 0 0,1 20,12A8,8 0 0,1 12,20A8,8 0 0,1 4,12A8,8 0 0,1 12,4M12,6A6,6 0 0,0 6,12A6,6 0 0,0 12,18A6,6 0 0,0 18,12A6,6 0 0,0 12,6Z"
                                                    Foreground="{DynamicResource SecondaryTextBrush}"
                                                    Height="64"
                                                    Width="64" />
                                                <TextBlock
                                                    Classes="header-medium"
                                                    FontSize="16"
                                                    Foreground="{DynamicResource PrimaryTextBrush}"
                                                    HorizontalAlignment="Center"
                                                    Text="No questions found"
                                                    TextAlignment="Center" />
                                                <TextBlock
                                                    Classes="body"
                                                    Foreground="{DynamicResource SecondaryTextBrush}"
                                                    HorizontalAlignment="Center"
                                                    MaxWidth="300"
                                                    Text="Enter a tag and click Search to find StackOverflow questions"
                                                    TextAlignment="Center"
                                                    TextWrapping="Wrap" />
                                            </StackPanel>
                                        </Border>
                                    </ControlTemplate>
                                </Setter>
                            </Style>
                        </ListBox.Styles>
                    </ListBox>

                    <!--  Loading State  -->
                    <Border Background="{DynamicResource BackgroundBrush}" IsVisible="{Binding SearchTab.IsLoading}">
                        <StackPanel
                            HorizontalAlignment="Center"
                            Spacing="16"
                            VerticalAlignment="Center">
                            <ProgressBar
                                Classes="loading-bar"
                                Height="4"
                                IsIndeterminate="True"
                                Width="200" />
                            <TextBlock
                                Classes="body"
                                Foreground="{DynamicResource SecondaryTextBrush}"
                                HorizontalAlignment="Center"
                                Text="Searching StackOverflow..." />
                        </StackPanel>
                    </Border>
                </Grid>
            </Grid>
        </TabItem>

        <!--  Tab 2: Recent Questions  -->
        <TabItem>
            <TabItem.Header>
                <StackPanel Classes="tab-header">
                    <TextBlock
                        Classes="body"
                        Text="Recent Questions"
                        VerticalAlignment="Center" />
                    <Border Classes="animatedBadge" IsVisible="{Binding RecentQuestionsTab.NotificationViewModel.UnreadCount, Converter={StaticResource GreaterThanConverter}, ConverterParameter='0'}">
                        <TextBlock
                            FontSize="10"
                            FontWeight="Bold"
                            Foreground="White"
                            HorizontalAlignment="Center"
                            Text="{Binding RecentQuestionsTab.NotificationViewModel.UnreadCount}"
                            VerticalAlignment="Center" />
                    </Border>
                </StackPanel>
            </TabItem.Header>

            <DockPanel Background="{DynamicResource BackgroundBrush}" Margin="16">
                <!--  Header Section  -->
                <StackPanel
                    DockPanel.Dock="Top"
                    Margin="0,0,0,20"
                    Spacing="16">
                    <!--  Subscription Management Card  -->
                    <Border Classes="section-card">
                        <StackPanel Spacing="16">
                            <TextBlock Classes="header-small" Text="ðŸ“¬ Subscription Management" />

                            <!--  Add Subscription Button  -->
                            <Button
                                Classes="primary"
                                Command="{Binding RecentQuestionsTab.ToggleSubscriptionDropdownCommand}"
                                Content="âž• Add Subscription"
                                HorizontalAlignment="Left"
                                Padding="12,8" />

                            <!--  Dropdown Content  -->
                            <Border
                                Background="{DynamicResource CardBackgroundBrush}"
                                BorderBrush="{DynamicResource BorderBrush}"
                                BorderThickness="1"
                                CornerRadius="8"
                                IsVisible="{Binding RecentQuestionsTab.IsSubscriptionDropdownOpen}"
                                Padding="16">
                                <StackPanel Spacing="12">
                                    <TextBlock
                                        Classes="body"
                                        FontWeight="SemiBold"
                                        Text="Subscribe to a tag:" />

                                    <!--  Tag Input  -->
                                    <StackPanel Orientation="Horizontal" Spacing="8">
                                        <TextBox
                                            Classes="search-input"
                                            Padding="12,8"
                                            Text="{Binding RecentQuestionsTab.NewSubscriptionTag}"
                                            Watermark="Enter tag (e.g., avalonia)"
                                            Width="240">
                                            <TextBox.KeyBindings>
                                                <KeyBinding Command="{Binding RecentQuestionsTab.AddSubscriptionCommand}" Gesture="Enter" />
                                            </TextBox.KeyBindings>
                                        </TextBox>
                                        <Button
                                            Classes="success"
                                            Command="{Binding RecentQuestionsTab.AddSubscriptionCommand}"
                                            Content="Subscribe"
                                            Padding="12,8" />
                                        <Button
                                            Classes="ghost"
                                            Command="{Binding RecentQuestionsTab.CancelSubscriptionCommand}"
                                            Content="Cancel"
                                            Padding="12,8" />
                                    </StackPanel>

                                    <!--  Suggestions  -->
                                    <StackPanel IsVisible="{Binding RecentQuestionsTab.SubscriptionSuggestions.Count, Converter={StaticResource GreaterThanConverter}, ConverterParameter='0'}" Spacing="6">
                                        <TextBlock Classes="caption" Text="Suggestions:" />
                                        <ItemsControl ItemsSource="{Binding RecentQuestionsTab.SubscriptionSuggestions}">
                                            <ItemsControl.ItemsPanel>
                                                <ItemsPanelTemplate>
                                                    <WrapPanel ItemSpacing="6" />
                                                </ItemsPanelTemplate>
                                            </ItemsControl.ItemsPanel>
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <Button
                                                        Classes="ghost"
                                                        Command="{Binding $parent[ItemsControl].((vm:MainWindowViewModel)DataContext).RecentQuestionsTab.UseSuggestionCommand}"
                                                        CommandParameter="{Binding}"
                                                        Content="{Binding}"
                                                        Padding="8,4" />
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>
                                    </StackPanel>
                                </StackPanel>
                            </Border>

                            <!--  Current Subscriptions  -->
                            <StackPanel Margin="0,8,0,0" Spacing="8">
                                <TextBlock Classes="body" Text="Active Subscriptions:" />
                                <ItemsControl ItemsSource="{Binding RecentQuestionsTab.Subscriptions}">
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <WrapPanel ItemSpacing="8" />
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Border Classes="tag">
                                                <StackPanel Orientation="Horizontal" Spacing="6">
                                                    <TextBlock
                                                        Classes="caption"
                                                        Text="{Binding Tag}"
                                                        VerticalAlignment="Center" />
                                                    <Button
                                                        Background="Transparent"
                                                        BorderThickness="0"
                                                        Classes="icon"
                                                        Command="{Binding $parent[ItemsControl].((vm:MainWindowViewModel)DataContext).RecentQuestionsTab.UnsubscribeToTagCommand}"
                                                        CommandParameter="{Binding Tag}"
                                                        Content="Ã—"
                                                        FontSize="12"
                                                        FontWeight="Bold"
                                                        Foreground="{DynamicResource ErrorBrush}"
                                                        Padding="4,0"
                                                        ToolTip.Tip="Unsubscribe from this tag" />
                                                </StackPanel>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>

                                <!--  No Subscriptions State  -->
                                <Border
                                    Background="{DynamicResource SectionBackgroundBrush}"
                                    CornerRadius="6"
                                    IsVisible="{Binding RecentQuestionsTab.Subscriptions.Count, Converter={x:Static ObjectConverters.Equal}, ConverterParameter='0'}"
                                    Padding="12">
                                    <TextBlock
                                        Classes="caption"
                                        Text="No active subscriptions. Add one above to start monitoring."
                                        TextAlignment="Center" />
                                </Border>
                            </StackPanel>
                        </StackPanel>
                    </Border>

                    <!--  Filter Section  -->
                    <Border Classes="section-card">
                        <StackPanel Spacing="12">
                            <TextBlock Classes="header-small" Text="ðŸ” Filter Questions" />

                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <TextBlock
                                    Classes="body"
                                    Text="Filter by tag:"
                                    VerticalAlignment="Center" />
                                <ItemsControl ItemsSource="{Binding RecentQuestionsTab.FilterTags}">
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <WrapPanel ItemSpacing="8" />
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Button
                                                Background="{Binding IsSelected, Converter={StaticResource BooleanToTagBackgroundConverter}}"
                                                Classes="filter-tag"
                                                Command="{Binding $parent[ItemsControl].((vm:MainWindowViewModel)DataContext).RecentQuestionsTab.FilterByTagCommand}"
                                                CommandParameter="{Binding Tag}"
                                                Content="{Binding Tag}"
                                                CornerRadius="16"
                                                FontWeight="SemiBold"
                                                Foreground="{Binding IsSelected, Converter={StaticResource BooleanToTagForegroundConverter}}"
                                                Padding="12,6"
                                                ToolTip.Tip="Click to filter by this tag">
                                                <Button.Styles>
                                                    <Style Selector="Button.filter-tag:pointerover /template/ ContentPresenter">
                                                        <Setter Property="Background" Value="{DynamicResource HoverBackgroundBrush}" />
                                                        <Setter Property="BorderBrush" Value="{DynamicResource AccentTextBrush}" />
                                                    </Style>
                                                </Button.Styles>
                                            </Button>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </StackPanel>
                        </StackPanel>
                    </Border>

                    <!--  Action Buttons  -->
                    <StackPanel Orientation="Horizontal" Spacing="12">
                        <Button
                            Classes="secondary"
                            Command="{Binding RecentQuestionsTab.MarkAllNotificationsAsReadCommand}"
                            Content="ðŸ“ Mark All as Read"
                            Padding="12,8"
                            ToolTip.Tip="Mark all questions as read" />

                        <Button
                            Classes="ghost"
                            Command="{Binding RecentQuestionsTab.ClearRecentQuestionsCommand}"
                            Content="ðŸ—‘ï¸ Clear Questions"
                            Padding="12,8"
                            ToolTip.Tip="Clear all recent questions" />

                        <Button
                            Classes="ghost"
                            Command="{Binding RecentQuestionsTab.TestNotificationCommand}"
                            Content="ðŸ”” Test Notification"
                            Padding="12,8"
                            ToolTip.Tip="Test notification system" />
                    </StackPanel>
                </StackPanel>

                <!--  Questions List  -->
                <ListBox ItemsSource="{Binding RecentQuestionsTab.FilteredRecentQuestions}" ScrollViewer.HorizontalScrollBarVisibility="Disabled">

                    <ListBox.ItemTemplate>
                        <DataTemplate DataType="models:StackOverflowQuestion">
                            <Border Classes="question-card">
                                <StackPanel Spacing="12">
                                    <!--  Question Title  -->
                                    <TextBlock
                                        Classes="header-small"
                                        Cursor="Hand"
                                        FontSize="15"
                                        FontWeight="SemiBold"
                                        Foreground="{DynamicResource AccentTextBrush}"
                                        Text="{Binding Title}"
                                        TextWrapping="Wrap">
                                        <TextBlock.ContextMenu>
                                            <ContextMenu Background="{DynamicResource CardBackgroundBrush}">
                                                <MenuItem
                                                    Classes="context-item"
                                                    Command="{Binding $parent[ListBox].((vm:RecentQuestionsViewModel)DataContext).OpenQuestionInBrowserCommand}"
                                                    CommandParameter="{Binding}"
                                                    Header="ðŸŒ Open in Browser" />
                                                <MenuItem
                                                    Classes="context-item"
                                                    Command="{Binding $parent[ListBox].((vm:RecentQuestionsViewModel)DataContext).CopyLinkCommand}"
                                                    CommandParameter="{Binding Link}"
                                                    Header="ðŸ“‹ Copy Link" />
                                            </ContextMenu>
                                        </TextBlock.ContextMenu>
                                    </TextBlock>

                                    <!--  Question Stats  -->
                                    <StackPanel
                                        Classes="stats-container"
                                        Orientation="Horizontal"
                                        Spacing="20">
                                        <StackPanel
                                            Classes="stat-item"
                                            Orientation="Horizontal"
                                            Spacing="6">
                                            <TextBlock Classes="caption" Text="Score:" />
                                            <TextBlock
                                                Classes="body"
                                                FontWeight="SemiBold"
                                                Foreground="{Binding Score, Converter={StaticResource ScoreToColorConverter}}"
                                                Text="{Binding Score}" />
                                        </StackPanel>

                                        <StackPanel
                                            Classes="stat-item"
                                            Orientation="Horizontal"
                                            Spacing="6">
                                            <TextBlock Classes="caption" Text="Answers:" />
                                            <TextBlock
                                                Classes="body"
                                                FontWeight="SemiBold"
                                                Foreground="{Binding AnswerCount, Converter={StaticResource AnswerCountToColorConverter}}"
                                                Text="{Binding AnswerCount}" />
                                        </StackPanel>

                                        <StackPanel
                                            Classes="stat-item"
                                            Orientation="Horizontal"
                                            Spacing="6">
                                            <TextBlock Classes="caption" Text="Views:" />
                                            <TextBlock Classes="body" Text="{Binding ViewCount}" />
                                        </StackPanel>

                                        <StackPanel
                                            Classes="stat-item"
                                            Orientation="Horizontal"
                                            Spacing="6">
                                            <TextBlock Classes="caption" Text="Status:" />
                                            <TextBlock
                                                Classes="body"
                                                Foreground="{Binding IsAnswered, Converter={StaticResource BooleanToColorConverter}}"
                                                Text="{Binding IsAnswered, Converter={StaticResource BooleanToAnsweredTextConverter}}" />
                                        </StackPanel>
                                    </StackPanel>

                                    <!--  Tags and Time  -->
                                    <StackPanel Orientation="Horizontal" Spacing="12">
                                        <ItemsControl ItemsSource="{Binding Tags}">
                                            <ItemsControl.ItemsPanel>
                                                <ItemsPanelTemplate>
                                                    <WrapPanel ItemSpacing="6" />
                                                </ItemsPanelTemplate>
                                            </ItemsControl.ItemsPanel>
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <Border Classes="tag">
                                                        <TextBlock
                                                            Classes="caption"
                                                            FontSize="11"
                                                            FontWeight="SemiBold"
                                                            Foreground="{DynamicResource TagTextBrush}"
                                                            Text="{Binding}" />
                                                    </Border>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>
                                    </StackPanel>

                                    <TextBlock
                                        Classes="caption"
                                        FontSize="11"
                                        FontStyle="Italic"
                                        Foreground="{DynamicResource SecondaryTextBrush}"
                                        HorizontalAlignment="Left"
                                        Text="{Binding CreationDateTime, StringFormat='{}{0:MMM dd, yyyy HH:mm}'}" />

                                    <!--  Action Buttons  -->
                                    <StackPanel
                                        HorizontalAlignment="Right"
                                        Orientation="Horizontal"
                                        Spacing="8">
                                        <Button
                                            Classes="secondary"
                                            Command="{Binding $parent[ListBox].((vm:MainWindowViewModel)DataContext).RecentQuestionsTab.OpenQuestionInBrowserCommand}"
                                            CommandParameter="{Binding}"
                                            Content="ðŸŒ Open"
                                            Padding="10,6" />

                                        <Button
                                            Classes="ghost"
                                            Command="{Binding $parent[ListBox].((vm:MainWindowViewModel)DataContext).RecentQuestionsTab.CopyLinkCommand}"
                                            CommandParameter="{Binding Link}"
                                            Content="ðŸ“‹ Copy"
                                            Padding="10,6"
                                            ToolTip.Tip="Copy question link to clipboard" />
                                    </StackPanel>

                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ListBox.ItemTemplate>

                    <!--  Empty State  -->
                    <ListBox.Styles>
                        <Style Selector="ListBox:empty">
                            <Setter Property="Template">
                                <ControlTemplate>
                                    <Border Classes="section-card" Margin="40">
                                        <StackPanel
                                            HorizontalAlignment="Center"
                                            Spacing="16"
                                            VerticalAlignment="Center">
                                            <PathIcon
                                                Data="M12,2A10,10 0 0,0 2,12A10,10 0 0,0 12,22A10,10 0 0,0 22,12A10,10 0 0,0 12,2M12,4A8,8 0 0,1 20,12A8,8 0 0,1 12,20A8,8 0 0,1 4,12A8,8 0 0,1 12,4M12,6A6,6 0 0,0 6,12A6,6 0 0,0 12,18A6,6 0 0,0 18,12A6,6 0 0,0 12,6Z"
                                                Foreground="{DynamicResource SecondaryTextBrush}"
                                                Height="64"
                                                Width="64" />
                                            <TextBlock
                                                Classes="header-medium"
                                                FontSize="16"
                                                Foreground="{DynamicResource PrimaryTextBrush}"
                                                HorizontalAlignment="Center"
                                                Text="No recent questions yet"
                                                TextAlignment="Center" />
                                            <TextBlock
                                                Classes="body"
                                                Foreground="{DynamicResource SecondaryTextBrush}"
                                                HorizontalAlignment="Center"
                                                MaxWidth="300"
                                                Text="Questions will appear here when you receive notifications from your subscriptions"
                                                TextAlignment="Center"
                                                TextWrapping="Wrap" />
                                            <Button
                                                Classes="primary"
                                                Command="{Binding RecentQuestionsTab.ToggleSubscriptionDropdownCommand}"
                                                Content="âž• Add Your First Subscription"
                                                HorizontalAlignment="Center"
                                                Padding="16,10" />
                                        </StackPanel>
                                    </Border>
                                </ControlTemplate>
                            </Setter>
                        </Style>
                    </ListBox.Styles>
                </ListBox>
            </DockPanel>
        </TabItem>

        <!--  Tab 3: Settings  -->
        <TabItem Header="Settings">
            <ScrollViewer Background="{DynamicResource BackgroundBrush}" VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="20" Spacing="20">

                    <!--  Notification Settings Section  -->
                    <Border Classes="section-card">
                        <StackPanel Spacing="16">
                            <TextBlock Classes="header-medium" Text="ðŸ”” Notification Settings" />

                            <!--  Pop-up Notifications  -->
                            <StackPanel Orientation="Horizontal" Spacing="12">
                                <ToggleButton
                                    Classes="notification-toggle"
                                    Height="28"
                                    IsChecked="{Binding SettingsTab.EnablePopupNotification}"
                                    Width="52">
                                    <ToggleButton.Styles>
                                        <Style Selector="ToggleButton.notification-toggle:checked">
                                            <Setter Property="Background" Value="{DynamicResource OnlineBrush}" />
                                        </Style>
                                        <Style Selector="ToggleButton.notification-toggle:not(:checked)">
                                            <Setter Property="Background" Value="{DynamicResource OfflineBrush}" />
                                        </Style>
                                    </ToggleButton.Styles>
                                </ToggleButton>
                                <StackPanel VerticalAlignment="Center">
                                    <TextBlock
                                        Classes="body"
                                        FontWeight="SemiBold"
                                        Text="Pop-up Notifications" />
                                    <TextBlock Classes="caption" Text="Show desktop notifications for new questions" />
                                </StackPanel>
                                <TextBlock
                                    Classes="caption"
                                    Foreground="{DynamicResource SecondaryTextBrush}"
                                    Margin="12,0,0,0"
                                    Text="{Binding SettingsTab.NotificationPopupState}"
                                    VerticalAlignment="Center" />
                            </StackPanel>

                            <!--  Notification Sound  -->
                            <StackPanel Orientation="Horizontal" Spacing="12">
                                <ToggleButton
                                    Classes="sound-toggle"
                                    Height="28"
                                    IsChecked="{Binding SettingsTab.EnableNotificationSound}"
                                    Width="52">
                                    <ToggleButton.Styles>
                                        <Style Selector="ToggleButton.sound-toggle:checked">
                                            <Setter Property="Background" Value="{DynamicResource OnlineBrush}" />
                                        </Style>
                                        <Style Selector="ToggleButton.sound-toggle:not(:checked)">
                                            <Setter Property="Background" Value="{DynamicResource OfflineBrush}" />
                                        </Style>
                                    </ToggleButton.Styles>
                                </ToggleButton>
                                <StackPanel VerticalAlignment="Center">
                                    <TextBlock
                                        Classes="body"
                                        FontWeight="SemiBold"
                                        Text="Notification Sound" />
                                    <TextBlock Classes="caption" Text="Play sound with notifications" />
                                </StackPanel>
                                <TextBlock
                                    Classes="body"
                                    FontSize="16"
                                    Margin="12,0,0,0"
                                    Text="{Binding SettingsTab.SoundIcon}"
                                    VerticalAlignment="Center" />
                                <Button
                                    Classes="ghost"
                                    Command="{Binding SettingsTab.TestSoundCommand}"
                                    Content="Test Sound"
                                    IsEnabled="{Binding SettingsTab.EnableNotificationSound}"
                                    Margin="12,0,0,0"
                                    Padding="10,6" />
                            </StackPanel>

                            <!--  Notification Duration  -->
                            <StackPanel Spacing="8">
                                <StackPanel Orientation="Horizontal" Spacing="8">
                                    <TextBlock
                                        Classes="body"
                                        FontWeight="SemiBold"
                                        Text="Notification Duration" />
                                    <TextBlock
                                        Classes="caption"
                                        Foreground="{DynamicResource AccentTextBrush}"
                                        Text="{Binding SettingsTab.NotificationDuration, StringFormat='{}{0} seconds'}" />
                                </StackPanel>
                                <TextBlock Classes="caption" Text="How long notifications stay visible" />
                                <Slider
                                    Classes="settings-slider"
                                    Height="50"
                                    Maximum="30"
                                    Minimum="2"
                                    TickFrequency="1"
                                    TickPlacement="BottomRight"
                                    Value="{Binding SettingsTab.NotificationDuration}" />
                                <TextBlock
                                    Classes="caption"
                                    Foreground="{DynamicResource SecondaryTextBrush}"
                                    HorizontalAlignment="Right"
                                    Text="Range: 2-30 seconds" />
                            </StackPanel>

                            <!--  Test Notification Button  -->
                            <Button
                                Classes="primary"
                                Command="{Binding SettingsTab.TestNotificationCommand}"
                                Content="ðŸ”” Test Notification"
                                HorizontalAlignment="Left"
                                Margin="0,8,0,0"
                                Padding="14,10" />
                        </StackPanel>
                    </Border>

                    <!--  Monitoring Settings Section  -->
                    <Border Classes="section-card">
                        <StackPanel Spacing="16">
                            <TextBlock Classes="header-medium" Text="ðŸ“¡ Monitoring Settings" />

                            <!--  Monitoring Status  -->
                            <Border Background="{Binding SettingsTab.IsMonitoring, Converter={StaticResource BooleanToMonitoringBackgroundConverter}}" Classes="status-card">
                                <StackPanel Orientation="Horizontal" Spacing="12">
                                    <TextBlock
                                        FontSize="20"
                                        Text="{Binding SettingsTab.MonitoringIcon}"
                                        VerticalAlignment="Center" />
                                    <StackPanel VerticalAlignment="Center">
                                        <TextBlock
                                            Classes="body"
                                            FontWeight="SemiBold"
                                            Text="{Binding SettingsTab.MonitoringStatus}" />
                                        <TextBlock Classes="caption" Text="{Binding SettingsTab.IsMonitoring, Converter={StaticResource BooleanToMonitoringDescriptionConverter}}" />
                                    </StackPanel>
                                </StackPanel>
                            </Border>

                            <!--  Monitoring Toggle  -->
                            <StackPanel Orientation="Horizontal" Spacing="12">
                                <ToggleButton
                                    Classes="monitoring-toggle"
                                    Command="{Binding SettingsTab.ToggleMonitoringCommand}"
                                    Height="28"
                                    Width="52">
                                    <ToggleButton.Styles>
                                        <Style Selector="ToggleButton.monitoring-toggle:checked">
                                            <Setter Property="Background" Value="{DynamicResource OnlineBrush}" />
                                        </Style>
                                        <Style Selector="ToggleButton.monitoring-toggle:not(:checked)">
                                            <Setter Property="Background" Value="{DynamicResource OfflineBrush}" />
                                        </Style>
                                    </ToggleButton.Styles>
                                </ToggleButton>
                                <StackPanel VerticalAlignment="Center">
                                    <TextBlock
                                        Classes="body"
                                        FontWeight="SemiBold"
                                        Text="Real-time Monitoring" />
                                    <TextBlock Classes="caption" Text="Continuously monitor for new questions" />
                                </StackPanel>
                                <Button
                                    Background="{Binding SettingsTab.IsMonitoring, Converter={StaticResource BooleanToMonitoringButtonColorConverter}}"
                                    Classes="monitoring-action"
                                    Command="{Binding SettingsTab.ToggleMonitoringCommand}"
                                    Content="{Binding SettingsTab.IsMonitoring, Converter={x:Static BoolConverters.Not}, ConverterParameter='Start Monitoring:Stop Monitoring'}"
                                    Foreground="White"
                                    Margin="12,0,0,0"
                                    Padding="12,8" />
                            </StackPanel>

                            <!--  Auto-start Monitoring  -->
                            <StackPanel Orientation="Horizontal" Spacing="12">
                                <CheckBox Classes="settings-checkbox" IsChecked="{Binding SettingsTab.AutoStartMonitoring}" />
                                <StackPanel VerticalAlignment="Center">
                                    <TextBlock
                                        Classes="body"
                                        FontWeight="SemiBold"
                                        Text="Auto-start Monitoring" />
                                    <TextBlock Classes="caption" Text="Start monitoring automatically when application launches" />
                                </StackPanel>
                            </StackPanel>

                            <!--  Monitoring Interval  -->
                            <StackPanel Margin="0,8,0,0" Spacing="8">
                                <StackPanel Orientation="Horizontal" Spacing="8">
                                    <TextBlock
                                        Classes="body"
                                        FontWeight="SemiBold"
                                        Text="Monitoring Interval" />
                                    <TextBlock
                                        Classes="caption"
                                        Foreground="{DynamicResource AccentTextBrush}"
                                        Text="{Binding SettingsTab.MonitoringInterval, StringFormat='{}{0} minutes'}" />
                                </StackPanel>
                                <TextBlock Classes="caption" Text="How often to check for new questions" />
                                <StackPanel Orientation="Horizontal" Spacing="12">
                                    <Slider
                                        Classes="settings-slider"
                                        Height="50"
                                        Maximum="60"
                                        Minimum="1"
                                        TickFrequency="1"
                                        TickPlacement="BottomRight"
                                        Value="{Binding SettingsTab.MonitoringInterval}" />
                                    <StackPanel Spacing="4">
                                        <Button
                                            Classes="icon"
                                            Command="{Binding SettingsTab.IncreaseMonitoringIntervalCommand}"
                                            Content="+"
                                            Height="28"
                                            Width="36" />
                                        <Button
                                            Classes="icon"
                                            Command="{Binding SettingsTab.DecreaseMonitoringIntervalCommand}"
                                            Content="-"
                                            Height="28"
                                            Width="36" />
                                    </StackPanel>
                                </StackPanel>
                                <TextBlock
                                    Classes="caption"
                                    Foreground="{DynamicResource SecondaryTextBrush}"
                                    HorizontalAlignment="Right"
                                    Text="Range: 1-60 minutes" />
                            </StackPanel>
                        </StackPanel>
                    </Border>

                    <!--  Data Management Section  -->
                    <Border Classes="section-card">
                        <StackPanel Spacing="16">
                            <TextBlock Classes="header-medium" Text="ðŸ’¾ Data Management" />

                            <!--  Maximum Recent Questions  -->
                            <StackPanel Spacing="8">
                                <StackPanel Orientation="Horizontal" Spacing="8">
                                    <TextBlock
                                        Classes="body"
                                        FontWeight="SemiBold"
                                        Text="Maximum Recent Questions" />
                                    <TextBlock
                                        Classes="caption"
                                        Foreground="{DynamicResource AccentTextBrush}"
                                        Text="{Binding SettingsTab.MaxRecentQuestions}" />
                                </StackPanel>
                                <TextBlock Classes="caption" Text="Maximum number of recent questions to keep in memory" />
                                <Slider
                                    Classes="settings-slider"
                                    Height="50"
                                    Maximum="200"
                                    Minimum="10"
                                    TickFrequency="10"
                                    TickPlacement="BottomRight"
                                    Value="{Binding SettingsTab.MaxRecentQuestions}" />
                                <TextBlock
                                    Classes="caption"
                                    Foreground="{DynamicResource SecondaryTextBrush}"
                                    HorizontalAlignment="Right"
                                    Text="Range: 10-200 questions" />
                            </StackPanel>

                            <!--  Cache Expiration  -->
                            <StackPanel Spacing="8">
                                <StackPanel Orientation="Horizontal" Spacing="8">
                                    <TextBlock
                                        Classes="body"
                                        FontWeight="SemiBold"
                                        Text="Cache Expiration" />
                                    <TextBlock
                                        Classes="caption"
                                        Foreground="{DynamicResource AccentTextBrush}"
                                        Text="{Binding SettingsTab.CacheExpirationHours, StringFormat='{}{0} hours'}" />
                                </StackPanel>
                                <TextBlock Classes="caption" Text="How long to keep cached data before refreshing" />
                                <Slider
                                    Classes="settings-slider"
                                    Height="50"
                                    Maximum="168"
                                    Minimum="1"
                                    TickFrequency="24"
                                    TickPlacement="BottomRight"
                                    Value="{Binding SettingsTab.CacheExpirationHours}" />
                                <TextBlock
                                    Classes="caption"
                                    Foreground="{DynamicResource SecondaryTextBrush}"
                                    HorizontalAlignment="Right"
                                    Text="Range: 1-168 hours (1 week)" />
                            </StackPanel>

                            <!--  Cache Statistics  -->
                            <Border Classes="info-card" Margin="0,12,0,0">
                                <StackPanel Spacing="8">
                                    <TextBlock
                                        Classes="body"
                                        FontWeight="SemiBold"
                                        Text="ðŸ“Š Cache Statistics" />
                                    <Grid
                                        ColumnDefinitions="Auto,*,Auto,*"
                                        Margin="0,2"
                                        RowDefinitions="Auto,Auto">
                                        <TextBlock
                                            Classes="caption"
                                            Grid.Column="0"
                                            Grid.Row="0"
                                            Text="Total Requests:" />
                                        <TextBlock
                                            Classes="body"
                                            FontWeight="SemiBold"
                                            Grid.Column="1"
                                            Grid.Row="0"
                                            Margin="8,0,0,0"
                                            Text="{Binding SettingsTab.TotalCacheRequests}" />

                                        <TextBlock
                                            Classes="caption"
                                            Grid.Column="2"
                                            Grid.Row="0"
                                            Margin="16,0,0,0"
                                            Text="Cache Hits:" />
                                        <TextBlock
                                            Classes="body"
                                            FontWeight="SemiBold"
                                            Foreground="{DynamicResource SuccessBrush}"
                                            Grid.Column="3"
                                            Grid.Row="0"
                                            Margin="8,0,0,0"
                                            Text="{Binding SettingsTab.CacheHits}" />

                                        <TextBlock
                                            Classes="caption"
                                            Grid.Column="0"
                                            Grid.Row="1"
                                            Text="Cache Misses:" />
                                        <TextBlock
                                            Classes="body"
                                            FontWeight="SemiBold"
                                            Foreground="{DynamicResource ErrorBrush}"
                                            Grid.Column="1"
                                            Grid.Row="1"
                                            Margin="8,0,0,0"
                                            Text="{Binding SettingsTab.CacheMisses}" />

                                        <TextBlock
                                            Classes="caption"
                                            Grid.Column="2"
                                            Grid.Row="1"
                                            Margin="16,0,0,0"
                                            Text="Status:" />
                                        <TextBlock
                                            Classes="body"
                                            FontWeight="SemiBold"
                                            Grid.Column="3"
                                            Grid.Row="1"
                                            Margin="8,0,0,0"
                                            Text="{Binding SettingsTab.CacheStatus}" />
                                    </Grid>
                                </StackPanel>
                            </Border>

                            <!--  Cache Actions  -->
                            <StackPanel
                                Margin="0,12,0,0"
                                Orientation="Horizontal"
                                Spacing="12">
                                <Button
                                    Classes="danger"
                                    Command="{Binding SettingsTab.ClearCacheCommand}"
                                    Content="ðŸ—‘ï¸ Clear Cache"
                                    Padding="12,8" />
                                <TextBlock
                                    Classes="caption"
                                    Foreground="{DynamicResource SecondaryTextBrush}"
                                    Text="Clear all cached data and force fresh API calls"
                                    VerticalAlignment="Center" />
                            </StackPanel>
                        </StackPanel>
                    </Border>

                    <!--  Subscriptions Management Section  -->
                    <Border Classes="section-card">
                        <StackPanel Spacing="16">
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <TextBlock Classes="header-medium" Text="ðŸ“‹ Tag Subscriptions" />
                                <TextBlock
                                    Classes="caption"
                                    Foreground="{DynamicResource SecondaryTextBrush}"
                                    Text="{Binding SettingsTab.Subscriptions.Count, StringFormat='({0} active)}'}"
                                    VerticalAlignment="Bottom" />
                            </StackPanel>

                            <!--  Active Subscriptions  -->
                            <StackPanel Spacing="8">
                                <TextBlock
                                    Classes="body"
                                    FontWeight="SemiBold"
                                    Text="Active Subscriptions:" />

                                <ItemsControl ItemsSource="{Binding SettingsTab.Subscriptions}">
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <WrapPanel ItemSpacing="8" />
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Border Classes="tag">
                                                <StackPanel Orientation="Horizontal" Spacing="6">
                                                    <TextBlock
                                                        Classes="caption"
                                                        Text="{Binding Tag}"
                                                        VerticalAlignment="Center" />
                                                    <Button
                                                        Background="Transparent"
                                                        BorderThickness="0"
                                                        Classes="icon"
                                                        Command="{Binding $parent[ItemsControl].((vm:MainWindowViewModel)DataContext).SettingsTab.UnsubscribeFromTagCommand}"
                                                        CommandParameter="{Binding Tag}"
                                                        Content="Ã—"
                                                        FontSize="12"
                                                        FontWeight="Bold"
                                                        Foreground="{DynamicResource ErrorBrush}"
                                                        Padding="4,0"
                                                        ToolTip.Tip="Unsubscribe from this tag" />
                                                </StackPanel>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>

                                <!--  Empty State  -->
                                <Border
                                    Background="{DynamicResource SectionBackgroundBrush}"
                                    CornerRadius="6"
                                    IsVisible="{Binding SettingsTab.Subscriptions.Count, Converter={x:Static ObjectConverters.Equal}, ConverterParameter='0'}"
                                    Padding="16">
                                    <StackPanel HorizontalAlignment="Center" Spacing="8">
                                        <TextBlock
                                            Classes="body"
                                            FontStyle="Italic"
                                            Foreground="{DynamicResource SecondaryTextBrush}"
                                            HorizontalAlignment="Center"
                                            Text="No active subscriptions" />
                                        <TextBlock
                                            Classes="caption"
                                            HorizontalAlignment="Center"
                                            Text="Add subscriptions in the Recent Questions tab" />
                                    </StackPanel>
                                </Border>
                            </StackPanel>

                            <!--  Subscription Actions  -->
                            <StackPanel
                                Margin="0,8,0,0"
                                Orientation="Horizontal"
                                Spacing="12">
                                <Button
                                    Classes="danger"
                                    Command="{Binding SettingsTab.ClearAllSubscriptionsCommand}"
                                    Content="Clear All Subscriptions"
                                    IsEnabled="{Binding SettingsTab.Subscriptions.Count, Converter={StaticResource GreaterThanConverter}, ConverterParameter='0'}"
                                    Padding="12,8" />
                                <TextBlock
                                    Classes="caption"
                                    Foreground="{DynamicResource SecondaryTextBrush}"
                                    Text="Remove all active tag subscriptions"
                                    VerticalAlignment="Center" />
                            </StackPanel>
                        </StackPanel>
                    </Border>

                    <!--  Reset Section  -->
                    <Border Background="{DynamicResource SectionBackgroundBrush}" Classes="section-card">
                        <StackPanel Spacing="16">
                            <TextBlock Classes="header-medium" Text="Application Settings" />

                            <StackPanel Orientation="Horizontal" Spacing="12">
                                <Button
                                    Classes="warning"
                                    Command="{Binding SettingsTab.ResetToDefaultsCommand}"
                                    Content="Reset to Defaults"
                                    Padding="14,10" />
                                <StackPanel VerticalAlignment="Center">
                                    <TextBlock Classes="body" Text="Reset all settings to their default values" />
                                    <TextBlock
                                        Classes="caption"
                                        Foreground="{DynamicResource SecondaryTextBrush}"
                                        Text="This will reset all your preferences to factory defaults" />
                                </StackPanel>
                            </StackPanel>
                        </StackPanel>
                    </Border>

                </StackPanel>
            </ScrollViewer>
        </TabItem>
    </TabControl>

</Window>